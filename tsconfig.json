{
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist_ts"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "dist_ts"]
}
