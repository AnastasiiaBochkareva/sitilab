              { label: 'Услуги  1', targetId: 'ars-tab3' },
              { label: 'Инфоповод  2', targetId: 'ars-tab4' },
            ],
            noCar: true,
            noSvg: true
          })
          .tabb#ars-tab1(style="width: 100%;")
