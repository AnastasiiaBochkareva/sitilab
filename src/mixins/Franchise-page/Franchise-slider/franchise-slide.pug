mixin Franchise-slide(param={})
    .franchise-slide
        .franchise-slide__top 
            .img-container
                +Img({
                    src: 'franchise-slide.png',
                    alt: 'franchise-slide'
                })
            .info-container
                .name=param.name
                .position=param.position
                .company=param.company
            .date=param.date
        .franchise-slide__body
            .text=param.text
            //- .text(data-simplebar)=param.text
            .white-shadow-block
