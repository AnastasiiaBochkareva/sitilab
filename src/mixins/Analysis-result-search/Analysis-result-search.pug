    section.analysis-result-serach
      .ars__sidebar-wrapper
        .ars__sidebar
          .ars__sidebar-head
            .a-title Фильтры
            a(href='/').text-blue Сбросить все
          .ars__sidebar-block
            .a-title-sm Кто я
